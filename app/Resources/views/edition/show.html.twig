{% extends 'base.html.twig' %}

{% block body %}
    <h1>Edition</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ edition.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ edition.name }}</td>
            </tr>
            <tr>
                <th>Startedat</th>
                <td>{% if edition.startedAt %}{{ edition.startedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Isactive</th>
                <td>{% if edition.isActive %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('edition_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('edition_edit', { 'id': edition.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
