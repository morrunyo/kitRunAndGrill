{% extends('layout.html.twig') %}

{% block body %}

	<div class="container">
		<div class="">
			<div class="page-header margin-none">
				<h2 class="padding-none">R&G's Places <br /></h2>
			</div>
			<div class="table-responsive">
<table class="table table-striped table-hover">
    <tr>
        <th>Name</th>
        <th>Phone</th>
        <th>Link</th>
    </tr>
    {% for place in places %}
    <tr>
        <td>{{place.name}}</td>
        <td>{{place.phone}}</td>
        <td class="actions"><a href={{ place.link }} class="btn btn-sn btn-primary">Go!</a></td>
    </tr>
    {% endfor %}
</table>
</div>
</div>
</div>
{%endblock %}