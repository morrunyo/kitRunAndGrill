{% extends('layout.html.twig') %}

{% block body %}

	<div class="container">
		<div class="">
			<div class="page-header margin-none">
				<h2 class="padding-none">{{ race.name }}'s Runners <br /></h2>
				<h3 class="padding-none">Started at: {{race.startedAt|date('d-m-Y H:i:s')}}</h3>
			</div>
			<div class="table-responsive">
<table class="table table-striped table-hover">
    <tr>
        <th>Id</th>
        <th>Number</th>
        <th>Name</th>
        <th>Finished</th>
        <th>Chrono</th>
        <th>Actions</th>
    </tr>
    {% for runner in runners %}
    <tr>
        <td>{{runner.id}}</td>
        <td>{{runner.number}}</td>
        <td>{{runner.name}}</td>
        <td> {% if runner.finishedAt %}
            {{runner.finishedAt|date('d-m-Y H:i:s')}}
            {% endif %}
        </td>
        <td>{{runner.chronoString()}}</td>
        <td class="actions">
            <a href="{{ path('runner_chrono', { 'id': runner.id }) }}" class="btn btn-sn btn-primary">Chrono</a>
        </td>
    </tr>
    {% endfor %}
</table>
</div>
</div>
</div>
{%endblock %}