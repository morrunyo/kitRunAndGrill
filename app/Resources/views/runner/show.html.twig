{% extends 'base.html.twig' %}

{% block body %}
    <h1>Runner</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ runner.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ runner.name }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ runner.number }}</td>
            </tr>
            <tr>
                <th>Finishedat</th>
                <td>{% if runner.finishedAt %}{{ runner.finishedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('runner_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('runner_edit', { 'id': runner.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
