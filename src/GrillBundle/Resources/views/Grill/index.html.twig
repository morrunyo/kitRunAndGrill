{% extends('layout.html.twig') %}

{% block body %}

	<div class="container">
		<div class="col-md-12">
			<div class="page-header margin-none">
				<h2 class="padding-none"> Races</h2>
			</div>
			<div class="table-responsive">
<table class="table table-striped table-hover">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Date</th>
        <th>Active</th>
        <th>Actions</th>
    </tr>
    {% for grill in grills %}
    <tr>
        <td>{{grill.id}}</td>
        <td>{{grill.name}}</td>
        <td>{{grill.date|date('d-m-Y')}}</td>
        <td>{{grill.isActive}}</td>
        <td class="actions">
            <a href={{path('grill_activate',{id: grill.id})}} class="btn btn-sn btn-info">Activate</a>
        </td>
    </tr>
    {% endfor %}
</table>
</div>
</div>
</div>
{%endblock %}