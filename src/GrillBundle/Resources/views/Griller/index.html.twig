{% extends('layout.html.twig') %}

{% block body %}

	<div class="container">
		<div class="col-md-12">
			<div class="page-header margin-none">
				<h2 class="padding-none">{{grill.name}}'s Grillers</h2>
			</div>
			<div class="table-responsive">
<table class="table table-striped table-hover">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Description</th>
        <th>Photo</th>
        <th>Photo</th>
    </tr>
    {% for griller in grillers %}
    <tr>
        <td>{{griller.id}}</td>
        <td>{{griller.name}}</td>
        <td>{{griller.email}}</td>
        <td>{{griller.description}}</td>
        <td>{{griller.photo}}</td>
        <td><img class="img-rounded" width="304" src="{{ asset("uploads/photos/" ~ griller.photo) }}"></td>
    </tr>
    {% endfor %}
</table>
</div>
</div>
</div>
{%endblock %}